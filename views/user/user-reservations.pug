h5.card-title Mes Réservations
.card-content
  if reservations.length > 0
    ul.list-group
      each res in reservations
        h5 #{res.title} - #{res.price} € par nuit
        .col-lg-3.img-col
          .crop
            img.offer-img(src=offer.path)
  else
    p Vous n'avez pas encore fait de réservations
