extends layout

block content
  .container
    .jumbotron.jumbotron-transparent
      h1.titre Nouvelle annonce
    br
    
    
    .card.box-shadow
      .card-body
        if errors
          for err in errors
            .alert.alert-danger #{err.msg}
        if successMessage
          .alert.alert-success #{successMessage}
        
        form(action='/edit/' + offer.id method='post' enctype="multipart/form-data")
          .form-group.row
            label.col-lg-3.col-form-label Titre de l'annonce
            .col-lg-9
              input.form-control(name="title", type="text" value=offer.title readonly)
          .form-group.row
            label.col-lg-3.col-form-label Description
            .col-lg-9
              textarea.form-control(name="description", type="text") #{offer.description}
          .form-group.row
            label.col-lg-3.col-form-label Prix par nuit
            .col-lg-2
              .input-group
                input.form-control(name="price", type="text" value=offer.price)
                .input-group-append
                  span.input-group-text €
          .form-group.row
            label.col-lg-3.col-form-label Département
            .col-lg-4
              input.form-control(name="department", type="text" value=offer.department readonly)
          .form-group.row
            label.col-lg-3.col-form-label Ville
            .col-lg-4
              input.form-control(name="city", type="text" value=offer.city readonly)
          .form-group.row
            label.col-lg-3.col-form-label Code postal
            .col-lg-4
              input.form-control(name="postcode", type="text" value=offer.postcode readonly)
          .form-group.row
            label.col-lg-3.col-form-label Adresse
            .col-lg-4
              input.form-control(name="address", type="text" value=offer.address readonly)
          .form-group.row
            label.col-lg-3.col-form-label Disponible du
            .col-lg-4
              .input-group.date
                input.form-control.datepicker(name="from" type="text" mydate=offer.avail[0].start)
            label.col-lg-1.col-form-label au
            .col-lg-4
              .input-group.date
                input.form-control.datepicker(name="to" type="text" mydate=offer.avail[0].end)
          
          br
          .form-group.row.col-lg-4
            | Images
          
          .form-group.row
            .col-lg-4
              .custom-file
                input.custom-file-input#file(type='file' name='image1')
                label.custom-file-label(for="file") Choisir une image

            .col-lg-4
              .custom-file
                input.custom-file-input#file1(type='file' name='image2')
                label.custom-file-label(for="file1") Choisir une image

            .col-lg-4
              .custom-file
                input.custom-file-input#file2(type='file' name='image3')
                label.custom-file-label(for="file2") Choisir une image
          button.form-control.btn.btn-success(type="submit") Modifier

block scripts
  script(src="/js/goods.js")
