extends layout

block header
    link(rel='stylesheet', href='/stylesheets/search.css')

block content
  .container
    h1 Barre de Recherche : #{search}
    h1 Nombre de Maison : #{house_lgt}
    if house_lgt < 1
      h1 Aucun Résultat pour : #{search}
    if house_lgt > 0
      div(class="container")
        div(class="row justify-content-around")
          each row in house
            each elem in row
              a(class="col-lg-4 square" href="goods/" + elem.id)
                img(class="Offer_Image" src="images/maison_search.png")
                p(class="Offer_Title") #{elem.title}
                p(class="Offer_Price") #{elem.price}€
                p(class="Offer_Night")  la nuit.
                p(class="Offer_Nb_People") #{elem.userId} Personnes
                  //- Changer userId par Nb_personne
            div(class="w-100")
