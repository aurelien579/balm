extends layout

block header
    link(rel='stylesheet', href='/stylesheets/index.css')

block content
    <!-- carousel-->
    div(class="carousel slide carousel-fade" data-ride="carousel")
      div(class="carousel-inner")
        div(class="carousel-item active")
          img(class="d-block w-100" id="img" src="images/balm2,5.jpg" alt="First slide")
        div(class="carousel-item")
          img(class="d-block w-100" id="img" src="images/balm1.jpg" alt="Second slide")
    div(class="wrap")
       div(class="search")
          input(type="text" class="searchTerm" placeholder="Where do you want to go?")
          button(type="submit" class="searchButton")
            i(class="fa fa-search")
