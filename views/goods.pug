extends layout
block header
    link(rel='stylesheet', href='/stylesheets/goods.css')

block content
    .container
      if offer
        div(id="carouselExampleIndicators" class="carousel" data-ride="carousel" data-interval ="5000")
            ul(class="carousel-indicators")
                li(data-target="#carouselExampleIndicators" data-slide-to="0" class="active")
                li(data-target="#carouselExampleIndicators"  data-slide-to="1")
                li(data-target="#carouselExampleIndicators" data-slide-to="2")

            div(class="carousel-inner")
                div(class="carousel-item active")
                    img(class="d-block w-100 " src="http://prixmaison.f"  alt="Second slide")
                div(class="carousel-item")
                    img(class="d-block w-100 "  src="http://waaqeffannaa.org/wp-content/uploads/2018/02/tonnant-decoration-cuisine-provence-id-es-de-design-accessoires-salle-bain-fresh-in-campagne-w641h478.jpg"  alt="Second slide")
                div(class="carousel-item")
                    img(class="d-block w-100 " src="http://www.avignon-et-provence.com/sites/default/files/styles/no-style/public/hebergements/blocimages/cote-provence-chambre-lourmarin.jpg?itok=teWok9Jb"  alt="Third slide")


            a(class="carousel-control-prev"  href="#carouselExampleIndicators" role="button" data-slide="prev")
                span(class="carousel-control-prev-icon" aria-hidden="true")
                span(class="sr-only">Previous)

            a(class="carousel-control-next" href="#carouselExampleIndicators" role="button"  data-slide="next")
                span(class="carousel-control-next-icon"  aria-hidden="true")
                span(class="sr-only">Next)
        div(class = "page")
          h1(class="display-4 titre-maison") #{offer.title}
          h4(class="text-justify")  Lieux : #{offer.city}
          h1() &#9734; &#9734; &#9734; &#9734; &#9734; #{Notes}
          h4(class="text-justify") Description :
          p(class="text-justify") #{offer.description}
          div(class = "commentaire")
            h4(class="text-justify") Commentaires
            if comments
              each row in comments
                - for (var x = 0; x < row.rating; x++)
                  h1(class = "inline") &#9734
                p(class="text-justify commentaires") #{row.content}
                h1(class = "commentaires")
            else
              p Il n'y a pas encore de commentaires disponibles pour cette offre


      else
        p Cette maison n'existe pas encore...
